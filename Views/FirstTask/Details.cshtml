@model ALG.Models.Country

<h1>@Model.CoutryName</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Города</th>
            <th scope="col">Количество людей</th>
        </tr>
    </thead>
    <tbody>
        @{int counter = 1;}
        @foreach (var city in Model.Cities)
        {
            <tr>
                <th scope="row">@(counter++)</th>
                <td>@city.CityName</td>
                <td>@city.PeopleCount</td>
            </tr>
        }

    </tbody>
</table>